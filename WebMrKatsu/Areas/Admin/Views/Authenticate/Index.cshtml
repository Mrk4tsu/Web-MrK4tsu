@model WebMrKatsu.Areas.Admin.Data.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = null;

}


<!DOCTYPE html>
<html lang="vi">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="MrKatsu">
    <meta name="keywords" content="au theme template">

    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/admin/css/style.css" rel="stylesheet" />

</head>
<body class="bg-primary">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <section class=" py-3 py-md-5 ">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                        <div class="card border border-light-subtle rounded-3 shadow-sm">
                            <div class="card-body p-3 p-md-4 p-xl-5">
                                <div class="text-center mb-3">
                                    <a href="#!">
                                        <img class="logo-motorola" src="~/assets/img/logo4.png" alt="MrK4tsu Shop Logo" width="175" height="57">
                                    </a>
                                </div>
                                <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Sign in to your account</h2>
                                @if (!string.IsNullOrEmpty(ViewBag.Message))
                                {
                                    <div class="alert alert-danger">
                                        <strong> Fail! </strong> @ViewBag.Message
                                    </div>
                                }
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <form action="#!">
                                    <div class="row gy-2 overflow-hidden">
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
                                                <label for="UserName" class="form-label text-secondary"> Tài khoản quản trị </label>
                                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                                                <label for="Password" class="form-label text-secondary"> Mật khẩu </label>
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        @*<div class="col-12">
                                                <div class="d-flex gap-2 justify-content-between">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" value="" name="rememberMe" id="rememberMe">
                                                        <label class="form-check-label text-secondary" for="rememberMe">
                                                            Keep me logged in
                                                        </label>
                                                    </div>
                                                    <a href="#!" class="link-primary text-decoration-none">Forgot password?</a>
                                                </div>
                                            </div>*@
                                        <div class="col-12">
                                            <div class="d-grid my-3">
                                                <button class="btn btn-primary btn-lg" type="submit">Log in</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    <section>
        <div class='air air1'></div>
        <div class='air air2'></div>
        <div class='air air3'></div>
        <div class='air air4'></div>
    </section>


</body>
</html>




